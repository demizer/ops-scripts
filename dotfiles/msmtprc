# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /tmp/msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           465
tls_starttls   off
from           jeezusjr@gmail.com
user           jeezusjr
account default : gmail
passwordeval    "secret-tool lookup host smtp.your.domain"
